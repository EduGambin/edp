\begin_layout Standard
\begin_inset Flex Color Box
status open

\begin_layout Proposition
Si 
\begin_inset Formula $K\in C^{n}\!\left(\mathbb{T}\right)$
\end_inset

 y 
\begin_inset Formula $f\in L^{1}\!\left(\mathbb{T}\right)$
\end_inset

 entonces 
\begin_inset Formula $K*f\in C^{n}\!\left(\mathbb{T}\right)$
\end_inset

 y además 
\begin_inset Formula 
\[
D^{\left(m\right)}\left(K*f\right)\!\left(x\right)=\left(\left(D^{\left(m\right)}K\right)*f\right)\!\left(x\right)
\]

\end_inset


\end_layout

\end_inset


\end_layout

