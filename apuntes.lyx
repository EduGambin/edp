\begin_inset Formula 
\[
\varphi(\t)=v(1,\t)=A_{0}+\sum_{n>0}\left(A_{n}\cos n\t+B_{n}\sen n\t\right).
\]

\end_inset

Usando ortogonalidad,
\begin_inset Formula 
\[
A_{0}=\frac{1}{2\pi}\int_{0}^{2\pi}\varphi(\t)\,d\t\quad A_{n}=\frac{1}{\pi}\int_{0}^{2\pi}\varphi(\t)\cos n\t\,d\t\quad B_{n}=\frac{1}{\pi}\int_{0}^{2\pi}\varphi(\t)\sen n\t\,d\t.
\]

\end_inset


\end_layout

\begin_layout Section
El núcleo de Poisson
\end_layout

\begin_layout Standard
Nos interesa escribir la solución de la ecuación de Laplace en forma integral
 utilizando un núcleo 
\begin_inset Formula $P$
\end_inset

 (denominado 
\series bold
núcleo de Poisson
\series default
), algo como
\begin_inset Formula 
\[
v(r,\t)=\frac{1}{2\pi}\int_{0}^{2\pi}\varphi(\vartheta)P(r,\t-\vartheta)\,d\vartheta.
\]

\end_inset

Para ello, trataremos de escribir la solución 
\begin_inset Formula $v(r,\t)=A_{0}+\sum_{n>0}r^{n}\left(A_{n}\cos n\t+B_{n}\sen n\t\right)$
\end_inset

 en forma compleja.
 Esto es
\begin_inset Formula 
\begin{multline*}
v(r,\t)=A_{0}+\sum_{n>0}r^{n}\left(A_{n}\frac{e^{in\t}+e^{-in\t}}{2}+B_{n}\frac{e^{in\t}-e^{-in\t}}{2i}\right)=\\
=A_{0}+\sum_{n>0}r^{n}\left(\frac{A_{n}-iB_{n}}{2}e^{in\t}+\frac{A_{n}+iB_{n}}{2}e^{-in\t}\right)=\alpha_{0}+\sum_{n>0}r^{n}\left(\alpha_{n}e^{in\t}+\alpha_{-n}e^{-in\t}\right)=\\
=\sum_{n\in\mathbb{Z}}r^{|n|}\alpha_{n}e^{in\t}.
\end{multline*}

\end_inset

En este caso, el valor en la frontera lo escribiremos como
\begin_inset Formula 
\[
\varphi(\t)=v(1,\t)=\sum_{n\in\mathbb{Z}}\alpha_{n}e^{in\t}.
\]

\end_inset


\end_layout

\begin_layout Standard
Para determinar 
\begin_inset Formula $\alpha_{n}$
\end_inset

, usamos ortogonalidad resultando en
\begin_inset Formula 
\[
\alpha_{n}=\sum_{m\in\mathbb{Z}}\alpha_{m}\frac{1}{2\pi}\int_{0}^{2\pi}e^{im\t}e^{-in\t}\,d\t=\frac{1}{2\pi}\int_{0}^{2\pi}\varphi(\t)e^{-in\t}\,d\t=\fint_{0}^{2\pi}\varphi(\t)e^{-in\t}\,d\t.
\]

\end_inset


\end_layout

\begin_layout Standard
Así, ya tenemos una forma integral, pues
\begin_inset Formula 
\begin{multline*}
v(r,\t)=\sum_{n\in\mathbb{Z}}r^{|n|}\left(\fint_{0}^{2\pi}\varphi(\vartheta)e^{-in\vartheta}\,d\vartheta\right)e^{in\t}=\fint_{0}^{2\pi}\left(\sum_{n\in\mathbb{Z}}r^{|n|}\varphi(\vartheta)e^{-in\vartheta}e^{in\t}\right)\,d\vartheta=\fint_{0}^{2\pi}\left(\sum_{n\in\mathbb{Z}}r^{|n|}\varphi(\vartheta)e^{-in\vartheta}e^{in\t}\right)\,d\vartheta=\\
=\fint_{0}^{2\pi}\varphi(\vartheta)\left(\sum_{n\in\mathbb{Z}}r^{|n|}e^{in(\t-\vartheta)}\right)\,d\vartheta=\fint_{0}^{2\pi}\varphi(\vartheta)P(r,\t-\vartheta)\,d\vartheta.
\end{multline*}

\end_inset


\end_layout

