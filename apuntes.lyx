\begin{align*}
v_{r} & =\left(u\circ h\right)_{r}=u_{x}x_{r}+u_{y}y_{r}=u_{x}\cos\theta+u_{y}\sen\theta\\
v_{rr} & =u_{xx}\cos^{2}\theta+2u_{xy}\cos\theta\sen\theta+u_{yy}\sen^{2}\theta\\
v_{\theta} & =\left(u\circ h\right)_{\t}=u_{x}x_{\t}+u_{y}y_{\t}=-u_{x}r\sen\theta+u_{y}r\cos\theta\\
v_{\t\t} & =\left(u_{xx}x_{\t}+u_{xy}y_{\t}\right)x_{\t}+u_{x}x_{\t\t}+\left(u_{yx}x_{\t}+u_{yy}y_{\t}\right)y_{\t}+u_{y}y_{\t\t}=\\
 & =u_{xx}x_{\t}^{2}+2u_{xy}y_{\t}x_{\t}+u_{x}x_{\t\t}+u_{yy}y_{\t}^{2}+u_{y}y_{\t\t}=\\
 & =r^{2}\left(u_{xx}\sen^{2}\t-2u_{xy}\cos\t\sen\t+u_{yy}\cos^{2}\t\right)+\\
 & -r\left(u_{x}\cos\t+u_{y}\sen\t\right),
