\begin_layout Lemma
\begin_inset Argument 1
status open

\begin_layout Plain Layout
Lema de D'Alembert
\end_layout

\end_inset

 En las condiciones anteriores, se verifican:
\end_layout

\begin_deeper
\begin_layout Enumerate
Si 
\begin_inset Formula $F,G\in C^{2}\!\left(\mathbb{R}\right)$
\end_inset

, entonces 
\begin_inset Formula $u\!\left(t,x\right)\coloneqq F\!\left(x-ct\right)+G\!\left(x+ct\right)$
\end_inset

 verifica la ecuación 
\begin_inset Formula $u_{tt}\!\left(t,x\right)=c^{2}u_{xx}\!\left(t,x\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
Si 
\begin_inset Formula $u\in C^{2}\!\left(\mathbb{R}\times\mathbb{R}\right)$
\end_inset

 y cumple 
\begin_inset Formula $u_{tt}\!\left(t,x\right)=c^{2}u_{xx}\!\left(t,x\right)$
\end_inset

, entonces existen funciones 
\begin_inset Formula $F,G\in C^{2}\!\left(\mathbb{R}\right)$
\end_inset

 tales que 
\begin_inset Formula $u\!\left(t,x\right)=F\!\left(x-ct\right)+G\!\left(x+ct\right)$
\end_inset

.
\end_layout

\end_deeper
\end_inset


\end_layout

\begin_layout Proof
Veamos cada una.
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $u_{tt}\!\left(t,x\right)=c^{2}F^{\prime}{}^{\prime}\!\left(x-ct\right)+c^{2}G{}^{\prime}{}^{\prime}\!\left(x+ct\right)$
\end_inset

 y 
\begin_inset Formula $u_{xx}\!\left(t,x\right)=F^{\prime}{}^{\prime}\!\left(x-ct\right)+G{}^{\prime}{}^{\prime}\!\left(x+ct\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
Supongamos 
\begin_inset Formula $u_{tt}=c^{2}u_{xx}$
\end_inset

.
 Haciendo un cambio de variable biyectivo
\begin_inset Formula 
\begin{flalign*}
h\coloneqq\left(\xi,\eta\right):\mathbb{R}\times\mathbb{R} & \rightarrow\mathbb{R}\times\mathbb{R} & h^{-1}:\mathbb{R}\times\mathbb{R} & \rightarrow\mathbb{R}\times\mathbb{R}\\
\left(t,x\right) & \mapsto\left(x-ct,x+ct\right) & \left(\xi,\eta\right) & \mapsto\left(\frac{\eta-\xi}{2c},\frac{\eta+\xi}{2}\right)
\end{flalign*}

\end_inset

y tomando 
\begin_inset Formula $v\coloneqq u\circ h^{-1}$
\end_inset

 podemos escribir las parciales de 
\begin_inset Formula $u$
\end_inset

 como
\begin_inset Formula 
\begin{align*}
u_{t} & =\left(v\circ h\right)_{t}=v_{\xi}\xi_{t}+v_{\eta}\eta_{t}=-cv_{\xi}+cv_{\eta}\\
u_{tt} & =c^{2}v_{\xi\xi}-c^{2}v_{\xi\eta}-c^{2}v_{\eta\xi}+c^{2}v_{\eta\eta}\\
u_{x} & =\left(v\circ h\right)_{x}=v_{\xi}\xi_{x}+v_{\eta}\eta_{x}=v_{\xi}+v_{\eta}\\
u_{xx} & =v_{\xi\xi}+v_{\xi\eta}+v_{\eta\eta}.
\end{align*}

\end_inset

Así, sustituyendo en la EDP tenemos
\begin_inset Formula 
\[
0=u_{tt}-c^{2}u_{xx}=c^{2}v_{\xi\xi}-c^{2}v_{\xi\eta}-c^{2}v_{\eta\xi}+c^{2}v_{\eta\eta}-c^{2}\left(v_{\xi\xi}+v_{\xi\eta}+v_{\eta\eta}\right)=-4c^{2}v_{\xi\eta}\iff v_{\xi\eta}=0.
\]

\end_inset

Integrando dos veces para recuperar 
\begin_inset Formula $v$
\end_inset

, tenemos
\begin_inset Formula 
\[
v_{\xi\eta}=0\overset{\int d\eta}{\longrightarrow}v_{\xi}=C(\xi)\overset{\int d\xi}{\longrightarrow}v=F(\xi)+G(\eta),
\]

\end_inset

donde 
\begin_inset Formula $F\coloneqq\int C(\xi)\,d\xi$
\end_inset

, 
\begin_inset Formula $C$
\end_inset

 y 
\begin_inset Formula $G$
\end_inset

 han aparecido como resultado de agrupar las constantes de integración correspon
dientes.
 Finalmente, deshaciendo el cambio de variable, obtenemos que efectivamente
\begin_inset Formula 
\[
u\!\left(t,x\right)=\left(v\circ h\right)\!\left(t,x\right)=F(x-ct)+G(x+ct).
\]

\end_inset


\end_layout

\end_deeper
